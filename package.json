{
  "name": "json-server-vercel",
  "version": "1.0.0",
  "description": "EsDataBase API (Express + PostgreSQL) ready for Vercel Functions",
  "main": "api/index.js",
  "scripts": {
    "start": "node api/index.js",
    "dev": "nodemon api/index.js",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "audit:fix": "npm audit fix",
    "check": "npm run format:check && npm run lint && npm test",
    "prepare": "husky install"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@vercel/postgres": "^0.10.0",
    "cors": "^2.8.6",
    "dotenv": "^17.2.4",
    "express": "^5.2.1",
    "pg": "^8.18.0"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.4.1",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "nodemon": "^3.1.9",
    "prettier": "^3.8.1",
    "supertest": "^7.2.2"
  },
  "lint-staged": {
    "**/*.{js,cjs,mjs,json,md,yml,yaml}": [
      "prettier --write"
    ],
    "**/*.{js,cjs,mjs}": [
      "eslint --fix"
    ]
  }
}
